<Window x:Class="ShoukatSons.UI.Views.BarcodePrintView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Barcode Print"
        Height="450"
        Width="800"
        Background="#0F1A33"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0"
                   Text="Barcode Print"
                   FontSize="22"
                   FontWeight="SemiBold"
                   Foreground="White"
                   Margin="0,0,0,12"/>

        <Border Grid.Row="1"
                CornerRadius="8"
                BorderBrush="#1F2B4D"
                BorderThickness="1"
                Background="#162447"
                Padding="16">
            <StackPanel>
                <TextBlock Text="This is your Barcode Print screen."
                           Foreground="#BFD1FF"
                           FontSize="14"
                           Margin="0,0,0,8"/>
                <TextBlock Text="Add your barcode printing UI elements here."
                           Foreground="#7F93C9"
                           FontSize="12"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>