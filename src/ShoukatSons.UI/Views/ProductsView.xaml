<Window x:Class="ShoukatSons.UI.Views.ProductsView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Products" Height="500" Width="900" WindowStartupLocation="CenterScreen">

    <!-- Border added so that Padding works -->
    <Border Background="#F7F7F7" Padding="10">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Header Buttons -->
            <StackPanel Orientation="Horizontal" Margin="0 0 0 10">
                <Button Content="➕ Add" Width="80" Margin="0 0 5 0" Click="Add_Click"/>
                <Button Content="✏ Edit" Width="80" Margin="0 0 5 0" Click="Edit_Click"/>
                <Button Content="🗑 Delete" Width="80" Click="Delete_Click"/>
            </StackPanel>

            <!-- Products List -->
            <DataGrid x:Name="ProductsGrid"
                      Grid.Row="1"
                      AutoGenerateColumns="False"
                      SelectionMode="Single"
                      CanUserAddRows="False"
                      IsReadOnly="True"
                      HeadersVisibility="Column">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="50"/>
                    <DataGridTextColumn Header="Barcode" Binding="{Binding Barcode}" Width="120"/>
                    <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="*"/>
                    <DataGridTextColumn Header="Category" Binding="{Binding Category.Name}" Width="150"/>
                    <DataGridTextColumn Header="Purchase Price"
                                        Width="120"
                                        Binding="{Binding PurchasePrice, StringFormat=N0}"/>
                    <DataGridTextColumn Header="Sale Price"
                                        Width="120"
                                        Binding="{Binding SalePrice, StringFormat=N0}"/>
                    <DataGridTextColumn Header="Stock" Binding="{Binding StockQuantity}" Width="80"/>
                    <DataGridTextColumn Header="Size" Binding="{Binding Size}" Width="80"/>
                    <DataGridTextColumn Header="Color" Binding="{Binding Color}" Width="80"/>
                </DataGrid.Columns>
            </DataGrid>
        </Grid>
    </Border>
</Window>