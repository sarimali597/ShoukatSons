<Window x:Class="ShoukatSons.UI.Views.ProductEditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Product Details" Height="400" Width="500"
        WindowStartupLocation="CenterOwner" ResizeMode="NoResize">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel>
            <Label Content="Barcode"/>
            <TextBox x:Name="TxtBarcode"/>

            <Label Content="Name"/>
            <TextBox x:Name="TxtName"/>

            <Label Content="Purchase Price"/>
            <TextBox x:Name="TxtPurchasePrice"/>

            <Label Content="Sale Price"/>
            <TextBox x:Name="TxtSalePrice"/>

            <Label Content="Stock Quantity"/>
            <TextBox x:Name="TxtStockQuantity"/>

            <Label Content="Size"/>
            <TextBox x:Name="TxtSize"/>

            <Label Content="Color"/>
            <TextBox x:Name="TxtColor"/>
        </StackPanel>

        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Content="Save" Width="80" Margin="0,0,5,0" Click="Save_Click"/>
            <Button Content="Cancel" Width="80" Click="Cancel_Click"/>
        </StackPanel>
    </Grid>
</Window>