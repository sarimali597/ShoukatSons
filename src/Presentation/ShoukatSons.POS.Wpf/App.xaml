<?xml version="1.0" encoding="utf-8"?>
<Application
    x:Class="ShoukatSons.POS.Wpf.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"

    xmlns:views="clr-namespace:ShoukatSons.POS.Wpf.Views"
    xmlns:viewsProd="clr-namespace:ShoukatSons.POS.Wpf.Views.Products"
    xmlns:viewsPos="clr-namespace:ShoukatSons.POS.Wpf.Views.POS"
    xmlns:viewsBp="clr-namespace:ShoukatSons.POS.Wpf.Views.BarcodePrint"

    xmlns:vm="clr-namespace:ShoukatSons.POS.Wpf.ViewModels"
    xmlns:vmProd="clr-namespace:ShoukatSons.POS.Wpf.ViewModels.Products"
    xmlns:vmPos="clr-namespace:ShoukatSons.POS.Wpf.ViewModels.POS"
    xmlns:vmRep="clr-namespace:ShoukatSons.POS.Wpf.ViewModels.Reports"
    xmlns:vmBp="clr-namespace:ShoukatSons.POS.Wpf.ViewModels.BarcodePrint"

    ShutdownMode="OnMainWindowClose">
  <Application.Resources>
    <ResourceDictionary>

      <!-- Map DashboardViewModel â†’ DashboardView -->
      <DataTemplate DataType="{x:Type vm:DashboardViewModel}">
        <views:DashboardView/>
      </DataTemplate>

      <!-- Example for other modules:
      <DataTemplate
        DataType="{x:Type vmProd:ProductListViewModel}"
        xmlns:vmProd="clr-namespace:ShoukatSons.POS.Wpf.ViewModels.Products"
        xmlns:viewsProd="clr-namespace:ShoukatSons.POS.Wpf.Views.Products">
        <viewsProd:ProductListView/>
      </DataTemplate>
      -->

    </ResourceDictionary>
  </Application.Resources>
</Application>